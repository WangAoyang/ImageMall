
@{
    ViewData["Title"] = "Index";
}
<script src="~/js/vue/vue.js"></script>
<script src="~/js/vue/axios.js"></script>
<h2>Index</h2>
<script src="~/js/jquery-3.3.1.js"></script>
<div  id="divstudents">
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>编号</td>
                <td>地区名称</td>
                <td>父级ID</td>
                <td>操作</td>
        </thead>
        <tbody>
            <tr v-for="item in list">
                <td>{{item.id}}</td>
                <td>{{item.name}}</td>
                <td>{{item.pid}}</td>
                <td><a href="#" class="btn btn-danger btn-2g" v-on:click="Delete(item.id)">删除</a></td>
            </tr>
        </tbody>
    </table>
</div>
<script>
    //显示
    var vm = new Vue({
        el: "#divstudents",
        data: {
            list:[]
        },
        mounted() {
            this.pagehandler();
        },
        methods: {
            pagehandler: function () {
                axios.get("http://localhost:5585/api/AddressInfo").then((response) => {
                    this.list = []
                    for (var i = 0; i < response.data.length; i++) {
                        this.list.push(response.data[i]);
                    }
                    console.log(this.list)
                });
            }
        }
    })
</script>
